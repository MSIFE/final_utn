<div class="container" style="margin-top: 30px;">


    <div class="row">
        <div class="col-7">
            <h3>Cursos</h3>
        </div>
        <div class="col-5 text-end">

            <div class="row">

                <a style="width: 5rem;margin-right: 5px;" class="btna btn btn-danger"
                    href="/admin/login/logout">Salir</a>
                <a style="width: 5rem; " class="btna btn btn-success" href="/admin/gallery/nuevo">
                    <i class="fa fa-plus" aria-hidden="true"> </i>Nuevo</a>

            </div>

        </div>
    </div>

    <div class="row">
        <div class="col">
            <table class="table">
                <thead>
                    <tr class="table-dark">
                        <th scope="col">Titulo</th>
                        <th scope="col">Descripcion</th>
                        <th scope="col">Precio</th>
                        <th scope="col">Imagen</th>
                      {{!--   <th class="text-end"> Acciones</th> --}}
                        
                    </tr>
                </thead>
                <tbody>

                    {{#each gallery}}
                    <tr>
                        <th scope="row"> {{titulo}} </th>
                        <td> {{info}} </td>
                        <td> {{precio}} </td>
                        <td> {{{imagen}}} </td>
                        <td class="text-end">
                            <a href="/admin/gallery/modificar/{{id_pro}}" class="btn btn-secondary">
                                <i class="fa fa-pencil" aria-hidden="true"></i>
                            </a>
                            <a href="/admin/gallery/eliminar/{{id_pro}}" class="btn btn-secondary">
                                <i class="fa fa-trash" aria-hidden="true"></i>
                            </a>
                        </td>
                    </tr>
                    {{/each}}

                </tbody>
            </table>
        </div>
    </div>
</div>